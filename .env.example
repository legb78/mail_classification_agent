# Groq API Configuration
GROQ_API_KEY=
GROQ_MODEL=

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=credentials/credentials.json
GMAIL_TOKEN_FILE=credentials/gmail_token.json

# Google Sheets API Configuration
SHEETS_CREDENTIALS_FILE=credentials/credentials.json
SHEETS_TOKEN_FILE=credentials/sheets_token.json
SPREADSHEET_ID=

# Processing Configuration
BATCH_SIZE=10
LOG_LEVEL=INFO

# Email Processing Options
# Set to 'true' to process all emails (read and unread), 'false' for unread only
PROCESS_ALL_EMAILS=true

# Maximum number of emails to process when PROCESS_ALL_EMAILS=true
MAX_EMAILS_TO_PROCESS=550

# Set to 'true' to fallback to recent emails if no unread emails are found
FALLBACK_TO_RECENT=false
