# Email Configuration
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=votre-email@gmail.com
EMAIL_PASSWORD=votre-mot-de-passe-app
EMAIL_FOLDER=INBOX
EMAIL_USE_SSL=true

# Google Sheets Configuration
GOOGLE_SHEETS_ID=votre-sheet-id-ici
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_SHEET_NAME=Tickets

# Classification Configuration - Groq LLM
GROQ_API_KEY=votre-cle-api-groq-ici
GROQ_MODEL=llama-3.1-70b-versatile
USE_GROQ_LLM=true

# Classification Configuration - ML Classique (optionnel)
CLASSIFICATION_MODEL_PATH=models/classification_model.pkl
CONFIDENCE_THRESHOLD=0.7
ENABLE_ML_CLASSIFICATION=false

# Catégories et Priorités
CLASSIFICATION_CATEGORIES=Technique,Commercial,Support,Facturation,Autre
CLASSIFICATION_PRIORITIES=Critique,Haute,Moyenne,Basse

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
NOTIFICATION_ENABLED=true

# Processing Configuration
POLLING_INTERVAL=60
BATCH_SIZE=10
MAX_RETRIES=3
RETRY_DELAY=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Security
ENCRYPT_CREDENTIALS=false
ALLOWED_SENDER_DOMAINS=
BLOCKED_SENDER_EMAILS=

# Feature Flags
ENABLE_ATTACHMENT_PROCESSING=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_AUTO_RESPONSE=false

